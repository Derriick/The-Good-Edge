%h1 Nouvel article
%p Page de création d'un nouvel article

= bootstrap_form_for(@article, multipart: true) do |f|
	%h3 Création d'annonce
	.row
		.col-md-6.col-xs-12
			= f.text_field :titre, label: "Titre", placeholder: "Nom de l'article"
			= f.number_field :prix, label: "Prix"
			%label Image
			.input-group
				%span.input-group-btn
					%span.btn.btn-primary.btn-file
						Choisir un fichier
						= f.file_field :picture, hide_label: true
				%input.form-control{:readonly => "readonly", :type => "text", :placeholder => "Image de l'article"}
			%br
		.col-md-6.col-xs-12
			= f.text_area :description, label: "Description", size: "60x6", placeholder: "Description de l'article"
		%p.text-center
			= f.submit "Créer l'article"
