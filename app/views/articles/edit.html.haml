%h1 Articles#edit
%p Find me in app/views/articles/edit.html.haml

= bootstrap_form_for(@article, multipart: true) do |f|
	%h3 Modification d'annonce
	.row
		.col-md-6.col-xs-12
			= f.text_field :titre, label: "Titre", placeholder: "Nom de l'article", content: @article.titre
			= f.number_field :prix, label: "Prix", content: @article.prix
			%label Image
			.input-group
				%span.input-group-btn
					%span.btn.btn-primary.btn-file
						Choisir un fichier
						= f.file_field :picture, hide_label: true
				%input.form-control{:readonly => "readonly", :type => "text", :placeholder => "Image de l'article"}
			%br
		.col-md-6.col-xs-12
			= f.text_area :description, label: "Description", size: "60x6", placeholder: "Description de l'article", content: @article.description
		%p.text-center
			= f.submit "Cr√©er l'article"
