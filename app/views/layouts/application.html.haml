!!! 5
%html
	%head
		%title The Good Edge
		= csrf_meta_tags

		= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
		= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css'
		= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js'

		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
		= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

	%body
		%nav.navbar.navbar-default
			.container-fluid
				.navbar-header
					%a.navbar-brand{href: "/"}
						The Good Edge
				.navbar-collapse.collapse
					%a.navbar-brand{href: "/articles"}
						Articles
					%a.navbar-brand{href: "/articles/new"}
						Nouvel article
					%a.navbar-brand{href: "/utilisateurs/new"}
						Nouvel utilisateur
					= bootstrap_form_for(Utilisateur.new, url: sign_in_utilisateurs_path, multipart: true, html: {class: "navbar_form navbar-right form-inline"}) do |f|
						= f.email_field :email, placeholder: "Votre email", hide_label: true
						= f.password_field :password, placeholder: "Votre mot de passe", hide_label: true
						= f.submit "Connexion"

		.container
			= yield