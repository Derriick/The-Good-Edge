%h1 Créer un compte

= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
	= devise_error_messages!
	%h3 Informations personnelles
	.row
		.col-md-6.col-xs-12
			= f.text_field :nom, label: "Nom", placeholder: "Nom", autofocus: true, required: true
		.col-md-6.col-xs-12
			= f.text_field :prenom, label: "Prénom", placeholder: "Prénom", autofocus: true, required: true
		.col-md-6.col-xs-12
			= f.email_field :email, label: "Email", placeholder: "mail@example.com", autofocus: true, required: true
		.col-md-6.col-xs-12
			= f.number_field :promotion, label: "Promotion", autofocus: true, placeholder: "2017"
		.col-md-6.col-xs-12
			= f.text_field :telephone, label: "Téléphone", autofocus: true, type: "tel"
		.col-md-6.col-xs-12
			%label Avatar
			.input-group
				%span.input-group-btn
					%span.btn.btn-primary.btn-file
						Choisir un fichier
						= f.file_field :avatar, hide_label: true
				%input.form-control{:readonly => "readonly", :type => "text", :placeholder => "Image de profil"}
	%h3 Sécurité
	.row
		.col-md-6.col-xs-12
			= f.password_field :password, label: "Mot de passe (#{@minimum_password_length} caractères minumum)", required: true
		.col-md-6.col-xs-12
			= f.password_field :password_confirmation, label: "Confirmer le mot de passe", autocomplete: "off", required: true
			%br
	%p.text-center
		= f.submit "Créer le compte", class: "btn btn-info"
/ = render "devise/shared/links"